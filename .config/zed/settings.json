{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  // "vim_mode": true,
  "ui_font_size": 14,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 13,
  "relative_line_numbers": "enabled",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Tokyo Night"
  },
  "terminal": {
    "font_size": 12,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "vim": {
    "use_system_clipboard": "always"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "tabs": {
    "show_diagnostics": "all",
    "file_icons": true,
    "git_status": true
  },
  "format_on_save": "off"
}
